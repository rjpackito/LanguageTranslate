@model List<HistoryTranslate>
@{
    ViewData["Title"] = "Index";
}
<h2>История конвертирований</h2>


<table class="table">
    <thead>
        <tr>
            <th>
                Дата конвертирования
            </th>
            <th>
                Конвейер
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
            <tr>
                <td>
                    @item.TranslateDate
                </td>
                <td>
                    @item.Grammatic
                </td>
                <td>
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.HistoryTranslateId">Просмотр</a>
                </td>
            </tr>
        }
    </tbody>
</table>
