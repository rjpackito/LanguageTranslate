@model LanguageTranslate.Models.Grammatic

@{
    ViewData["Title"] = "Редактирование грамматики";
}
<div asp-validation-summary="All" class="text-danger"></div>
<h2>Редактирование</h2>
<div>
    <form asp-action="Edit" method="post">
        <div class="form-control">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" name="Title" class="form-control" id="Title" />
            </div>
            <div class="form-group">
                <label asp-for="Text"></label>            
                <textarea id="Text" asp-for="Text" name="Text" class="form-control resize" rows="20"></textarea>
            </div>
        </div>
    </form>
</div>
<div>
    <button type="submit" class="btn btn-primary">Добавить</button>
    <a asp-action="Index">Back to List</a>
</div>
