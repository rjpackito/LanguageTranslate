@model LanguageTranslate.Models.Grammatic
@{
    ViewData["Title"] = "Редактирование грамматики";
}
<div asp-validation-summary="All" class="text-danger"></div>
<h2>Редактирование</h2>

<form asp-action="Edit" method="post">
    <div>
        <input type="hidden" asp-for="GrammaticId" />

    </div>
    <div class="form-group">
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" name="Title" class="form-control" id="Title" />
        </div>
        <div class="form-group">
            <label asp-for="FromLanguage"></label>
            <input asp-for="FromLanguage" name="FromLanguage" class="form-control" id="FromLanguage" />
        </div>
        <div class="form-group">
            <label asp-for="ToLanguage"></label>
            <input asp-for="ToLanguage" name="ToLanguage" class="form-control" id="ToLanguage" />
        </div>
        <div class="form-group">
            <label asp-for="Text"></label>
            <textarea id="Text" asp-for="Text" name="Text" class="form-control resize" rows="20"></textarea>
        </div>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Применить</button>
        <a asp-action="Index">Назад к списку</a>
    </div>
</form>

