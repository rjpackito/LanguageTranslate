@{
    ViewData["Title"] = "Добавить грамматику";
}
@model string

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="name">Новая грамматика</label>
        <div class="form-group">
            <label for="Title">Название:</label>
            <input name="Title" class="form-control" id="Title"/>
        </div>
        <div class="form-group">
            <label for="FromLanguage">Из языка программирования:</label>
            <input name="FromLanguage" class="form-control" id="Title" />
        </div>
        <div class="form-group">
            <label for="ToLanguage">В язык программирования:</label>
            <input name="ToLanguage" class="form-control" id="Title" />
        </div>
        <div class="form-group">
            <label for="Text">Текст грамматики:</label>
            <textarea id="Text" name="Text" class="form-control resize" rows="20"></textarea>
        </div>
        
    </div>
    <button type="submit" class="btn btn-primary">Добавить</button>
</form>


